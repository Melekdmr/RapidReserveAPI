@model UpdateGuestDto
@{
    ViewData["Title"] = "UpdateGuest";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}



<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<form method="post" id="addRoomForm"> 
    <input type="hidden"asp-for="GuestID" />
    <div class="form-group">
        <label>Misafir Adı</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Misafir Soyadı</label>
        <input type="text" asp-for="SurName" class="form-control" />
        <span asp-validation-for="SurName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Şehir</label>
        <input type="text" asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary" id="submitBtn">
        <i class="fas fa-user-check"></i> Misafir Güncelle
    </button>
    <a href="/Guest/Index" class="btn btn-secondary">
        <i class="fa fa-arrow-left"></i> Geri Dön
    </a>
</form>