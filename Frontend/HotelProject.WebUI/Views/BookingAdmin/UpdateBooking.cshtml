@model UpdateBookingDto
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}



<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<form method="post" asp-action="UpdateBooking" asp-controller="BookingAdmin">
    <input type="hidden"asp-for="BookingID" />
    <div class="form-group">
        <label>Misafir Adı</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Mail Adresi</label>
        <input type="email" asp-for="Mail" class="form-control" />
        <span asp-validation-for="Mail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Giriş Tarihi</label>
        <input type="date" asp-for="Checkin" class="form-control" />
        <span asp-validation-for="Checkin" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Çıkış Tarihi</label>
        <input type="date" asp-for="CheckOut" class="form-control" />
        <span asp-validation-for="CheckOut" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Yetişkin Sayısı</label>
        <input type="text" asp-for="AdultCount" class="form-control" />
        <span asp-validation-for="AdultCount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Çocuk Tarihi</label>
        <input type="text" asp-for="ChildCount" class="form-control" />
        <span asp-validation-for="ChildCount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Oda sayısı</label>
        <input type="text" asp-for="RoomCount" class="form-control" />
        <span asp-validation-for="RoomCount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Şehir</label>
        <input type="text" asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Ülke</label>
        <input type="text" asp-for="Country" class="form-control" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Durum</label>
        <input type="text" asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Özel İstekler</label>
        <textarea asp-for="SpecialRequest" rows="5" class="form-control" ></textarea>
        <span asp-validation-for="SpecialRequest" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        <textarea asp-for="Descriptiont" rows="5" class="form-control" ></textarea>
        <span asp-validation-for="Descriptiont" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary" id="submitBtn">
        <i class="fas fa-user-check"></i> Rezervasyon Güncelle
    </button>
    <a href="/BookingAdmin/Index" class="btn btn-secondary">
        <i class="fa fa-arrow-left"></i> Geri Dön
    </a>
    </form>

