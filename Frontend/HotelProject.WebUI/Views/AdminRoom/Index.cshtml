@model List<ResultRoomDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />



<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Oda Numarası</th>
        <th>Başlık</th>
        <th> Sil</th>
        <th> Güncelle</th>

    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.RoomNumber</td>
            <td>@item.Title</td>
            <td>
                <a href="/AdminRoom/DeleteRoom/@item.RoomId" class="btn btn-danger"><i class="fa fa-trash"></i> Sil </a>
            </td>
            <td>
                <a href="/AdminRoom/UpdateRoom/@item.RoomId" class="btn btn-success">
                    <i class="fa fa-edit"></i> Güncelle
                </a>
            </td>
          
        </tr>
    }
</table>
<a href="/AdminRoom/AddRoom/" class="btn" style="background-color: #ff6600; color: white;">
    <i class="fas fa-bed"></i> Yeni Oda Girişi
</a>





