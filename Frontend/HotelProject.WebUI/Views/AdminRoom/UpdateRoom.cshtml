@model UpdateRoomDto
@{
    ViewData["Title"] = "UpdateRoom";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />


<form method="post">
    <input type="hidden" asp-for="RoomId" />
    <label>Oda Numarası</label>
    <input type="text" asp-for="RoomNumber" class="form-control" />
    <br />
    <label>Oda Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Fiyat Bilgisi</label>
    <input type="text" asp-for="Price" class="form-control" />
    <br />
    <label>Yatak Sayısı</label>
    <input type="text" asp-for="BedCount" class="form-control" />
    <br />
    <label>Banyo Sayısı</label>
    <input type="text" asp-for="BathCount" class="form-control" />
    <br />
    <div class="form-group">
        <label>Wifi</label>
        <input type="text" asp-for="Wifi" class="form-control" required />
        <span asp-validation-for="Wifi" class="text-danger"></span>
    </div>

    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <div class="form-group">
        <label>Oda Görseli URL</label>
        <input type="text" asp-for="RoomCoverImage" class="form-control" />
        <span asp-validation-for="RoomCoverImage" class="text-danger"></span>
    </div>

    <button class="btn btn-primary"> <i class="fa fa-bed"></i>Güncelle</button>
</form>