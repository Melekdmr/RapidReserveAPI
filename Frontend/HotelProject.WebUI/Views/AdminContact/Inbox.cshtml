
@model List<InboxContactDto>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-lg-12">
  
      
            <div class="email-left-box">
        <a href="/AdminContact/AddSendMessage/" class="btn btn-primary btn-block">Yeni Mesaj</a>
                @await Html.PartialAsync("SideBarAdminContactPartial")

                <h5 class="mt-5 m-b-10">Kategoriler</h5>
                @await Html.PartialAsync("SideBarAdminContactCaetgoryPartial")
            </div>

            <div class="email-right-box">
                <div role="toolbar" class="toolbar">
                    <div class="btn-group">
                        <button aria-expanded="false" data-toggle="dropdown" class="btn btn-dark dropdown-toggle" type="button">
                            Daha Fazla <span class="caret m-l-5"></span>
                        </button>
                        <div class="dropdown-menu">
                            <span class="dropdown-header">Diğer Seçenekler :</span>
                            <a href="javascript: void(0);" class="dropdown-item">Okunmadı Olarak İşaretle</a>
                            <a href="javascript: void(0);" class="dropdown-item">Göreve Ekle</a>
                            <a href="javascript: void(0);" class="dropdown-item">Yıldız Ekle</a>
                            <a href="javascript: void(0);" class="dropdown-item">Sessize Al</a>
                        </div>
                    </div>
                </div>

                <div class="email-list m-t-15">
                    @foreach(var item in Model)
                    {
                        
                    <div class="message">
                    <a href="/AdminContact/MessageDetailsByInbox/@item.ContactId">
                            <div class="col-mail col-mail-1">
                                <div class="email-checkbox">
                                    <input type="checkbox" id="chk2">
                                    <label class="toggle" for="chk2"></label>
                                </div>
                                <span class="star-toggle ti-star"></span>
                            </div>
                            <div class="col-mail col-mail-2">
                                <div class="subject">
                                  @item.Message.Substring(0,90)
                                </div>
                            <div class="date"> @item.Date.ToString("dd.MM.yyyy")</div>
                            </div>
                        </a>
                    </div>
                    }
                </div>

                <!-- panel -->
            </div>
        </div>

