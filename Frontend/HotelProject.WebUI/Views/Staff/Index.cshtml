@model List<StaffViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Personel Adı</th>
        <th>Personel Unvan</th>
        <th>Personel Sil</th>
        <th>Personel Güncelle</th>
        <th>Personel Detaylar</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <th>@item.StaffID</th>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td>
                <a href="/Staff/DeleteStaff/@item.StaffID" class="btn btn-danger"><i class="fa fa-trash"></i> Sil </a>
            </td>
            <td>
                <a href="/Staff/UpdateStaff/@item.StaffID" class="btn btn-success">
                    <i class="fa fa-edit"></i> Güncelle
                </a>
            </td>
            <td>
                <a href="#" class="btn btn-dark">
                    <i class="fa fa-info-circle"></i> Detaylar
                </a>
            </td>
        </tr>
    }
</table>
<a href="/Staff/AddStaff/" class="btn" style="background-color: #ff6600; color: white;">
    <i class="fa fa-user-plus"></i> Yeni Personel Girişi
</a>



