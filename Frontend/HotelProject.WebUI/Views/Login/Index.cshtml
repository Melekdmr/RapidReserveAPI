@model LoginUserDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>RapidReserveAPI - Giriş Yap</title>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap"
          rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            font-family: 'Inter', sans-serif;
            background: linear-gradient(to bottom, #2c3e50, #34495e);
            position: relative;
        }

            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-image: radial-gradient(circle at 20% 80%, rgba(255, 215, 0, 0.1) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(255, 215, 0, 0.1) 0%, transparent 50%);
                pointer-events: none;
            }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 10px;
            min-height: 100vh;
        }

        .login-container {
            background: linear-gradient(145deg, #ffffff 0%, #f8f9fa 100%);
            width: 100%;
            max-width: 550px;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1), 0 10px 20px rgba(0, 0, 0, 0.05), inset 0 1px 0 rgba(255, 255, 255, 0.8);
            padding: 25px 35px;
            margin: auto;
            position: relative;
            animation: slideUp 0.6s ease-out;
            border: 1px solid rgba(255, 215, 0, 0.1);
        }

        @@keyframes slideUp {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .logo {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #d4af37 0%, #ffd700 50%, #b8860b 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            color: white;
            font-size: 1.8rem;
            font-weight: 600;
            user-select: none;
            box-shadow: 0 8px 20px rgba(212, 175, 55, 0.3), inset 0 1px 0 rgba(255, 255, 255, 0.3);
            position: relative;
        }

            .logo::after {
                content: '';
                position: absolute;
                top: 8px;
                left: 8px;
                right: 8px;
                bottom: 8px;
                border-radius: 50%;
                border: 1px solid rgba(255, 255, 255, 0.2);
                pointer-events: none;
            }

        .title {
            font-size: 1.8rem;
            font-weight: 600;
            background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 5px;
            text-align: center;
            position: relative;
        }

            .title::after {
                content: '★★★★★';
                display: block;
                font-size: 0.6rem;
                color: #d4af37;
                margin-top: 2px;
                letter-spacing: 1px;
            }

        .subtitle {
            color: #6b7280;
            margin-bottom: 20px;
            text-align: center;
            font-size: 0.95rem;
        }

        form {
            width: 100%;
        }

        .form-group {
            margin-bottom: 16px;
            position: relative;
        }

        .form-control {
            width: 100%;
            padding: 14px 50px 14px 45px;
            border: 2px solid #e8e9ea;
            border-radius: 12px;
            font-size: 1rem;
            background: linear-gradient(145deg, #ffffff 0%, #f8f9fa 100%);
            transition: all 0.3s ease;
            outline: none;
            font-family: inherit;
            position: relative;
        }

            .form-control::placeholder {
                color: #8a8a8a;
                font-weight: 400;
            }

            .form-control:focus {
                border-color: #d4af37;
                background: #fff;
                box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1), 0 4px 12px rgba(212, 175, 55, 0.15);
                transform: translateY(-1px);
            }

            .form-control:valid {
                border-color: #10b981;
            }

        .form-icon {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: #d4af37;
            transition: all 0.3s ease;
            z-index: 1;
            font-size: 1.1rem;
        }

        .form-control:focus + .form-icon {
            color: #b8860b;
            transform: translateY(-50%) scale(1.1);
        }

        .text-danger {
            color: #ef4444;
            font-size: 0.85rem;
            margin-top: 5px;
            display: block;
        }

        .forgot-password {
            text-align: right;
            margin-bottom: 20px;
        }

            .forgot-password a {
                color: #d4af37;
                text-decoration: none;
                font-size: 0.9rem;
                font-weight: 500;
                transition: color 0.3s ease;
            }

                .forgot-password a:hover {
                    color: #b8860b;
                    text-decoration: underline;
                }

        .btn-login {
            width: 100%;
            padding: 16px;
            background: linear-gradient(135deg, #d4af37 0%, #ffd700 50%, #b8860b 100%);
            border: none;
            border-radius: 12px;
            color: white;
            font-size: 1.05rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-bottom: 20px;
            box-shadow: 0 6px 20px rgba(212, 175, 55, 0.3), inset 0 1px 0 rgba(255, 255, 255, 0.2);
            font-family: inherit;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            position: relative;
            overflow: hidden;
        }

            .btn-login::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
                transition: left 0.5s;
            }

            .btn-login:hover::before {
                left: 100%;
            }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 30px rgba(212, 175, 55, 0.4), inset 0 1px 0 rgba(255, 255, 255, 0.3);
            }

            .btn-login:active {
                transform: translateY(0);
            }

        .divider {
            text-align: center;
            margin: 18px 0;
            position: relative;
            color: #6b7280;
            font-size: 0.85rem;
        }

            .divider::before {
                content: '';
                position: absolute;
                top: 50%;
                left: 0;
                right: 0;
                height: 1px;
                background: #e5e7eb;
                z-index: 0;
            }

            .divider span {
                background: white;
                padding: 0 15px;
                position: relative;
                z-index: 1;
            }

        .social-buttons {
            display: flex;
            gap: 15px;
            margin-bottom: 18px;
        }

        .social-btn {
            flex: 1;
            padding: 12px;
            border: 2px solid #e5e7eb;
            background: white;
            border-radius: 12px;
            font-size: 0.9rem;
            font-weight: 500;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            color: #374151;
            transition: all 0.3s ease;
            font-family: inherit;
        }

            .social-btn:hover {
                border-color: #d1d5db;
                background: #f9fafb;
                transform: translateY(-1px);
            }

            .social-btn.google:hover {
                border-color: #d4af37;
                color: #d4af37;
                box-shadow: 0 4px 15px rgba(212, 175, 55, 0.2);
            }

            .social-btn.facebook:hover {
                border-color: #2c3e50;
                color: #2c3e50;
                box-shadow: 0 4px 15px rgba(44, 62, 80, 0.2);
            }

        .footer {
            text-align: center;
            color: #6b7280;
            font-size: 0.9rem;
        }

            .footer a {
                color: #d4af37;
                text-decoration: none;
                font-weight: 500;
                transition: color 0.3s ease;
            }

                .footer a:hover {
                    color: #b8860b;
                    text-decoration: underline;
                }

        /* Responsive Design */
        @@media (max-width: 768px) {
            body

        {
            padding: 15px;
            align-items: flex-start;
            padding-top: 20px;
        }

        .login-container {
            padding: 30px 25px;
            max-width: 100%;
            margin: 0;
        }

        .title {
            font-size: 1.8rem;
        }

        .form-control {
            font-size: 16px; /* iOS zoom fix */
            padding: 14px 40px 14px 35px;
        }

        .social-buttons {
            gap: 10px;
        }

        }

        @@media (max-width: 640px) {
            .login-container

        {
            max-width: 95%;
            padding: 25px 20px;
        }

        .social-buttons {
            flex-direction: column;
            gap: 10px;
        }

        }

        @@media (max-height: 700px) {
            body

        {
            align-items: flex-start;
            padding-top: 15px;
        }

        .login-container {
            margin: 0;
            padding: 25px 30px;
        }

        }

        /* Loading state for form */
        .btn-login:disabled {
            opacity: 0.7;
            cursor: not-allowed;
            transform: none;
        }

        /* Form validation styling */
        .form-control.is-invalid {
            border-color: #ef4444;
            box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
        }

        .form-control.is-valid {
            border-color: #10b981;
            box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
        }

        .remember-me {
            display: flex;
            align-items: center;
            margin-bottom: 16px;
            font-size: 0.9rem;
            color: #6b7280;
        }

            .remember-me input[type="checkbox"] {
                margin-right: 8px;
                transform: scale(1.1);
                accent-color: #d4af37;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="logo">🏨</div>
        <h1 class="title">Rapid Reserve Api</h1>
        <p class="subtitle">Hesabınıza giriş yapın</p>

        <form method="post">
            <div class="form-group">
                <input type="text"
                       class="form-control"
                       placeholder="Kullanıcı Adı"
                       asp-for="UserName"
                       autocomplete="username"
                       required />
                <i class="fas fa-user form-icon"></i>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="password"
                       class="form-control"
                       placeholder="Şifreniz"
                       asp-for="Password"
                       autocomplete="current-password"
                       required />
                <i class="fas fa-lock form-icon"></i>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="remember-me">
                <input type="checkbox"  id="rememberMe" />
                <label for="rememberMe">Beni hatırla</label>
            </div>

            <div class="forgot-password">
                <a href="/Account/ForgotPassword">Şifrenizi mi unuttunuz?</a>
            </div>

            <button type="submit" class="btn-login">
                <i class="fas fa-sign-in-alt" style="margin-right: 8px"></i>
                Giriş Yap
            </button>
        </form>

        <div class="divider">
            <span>veya devam edin</span>
        </div>

        <div class="social-buttons">
            <button type="button" class="social-btn google">
                <i class="fab fa-google"></i>
                Google
            </button>
            <button type="button" class="social-btn facebook">
                <i class="fab fa-facebook-f"></i>
                Facebook
            </button>
        </div>

        <p class="footer">
            Henüz hesabınız yok mu?
            <a href="/Register/Index/">Kayıt Olun</a>
        </p>
    </div>
</body>
</html>