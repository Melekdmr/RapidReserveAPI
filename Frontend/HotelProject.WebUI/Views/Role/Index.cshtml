@model List<HotelProject.EntityLayer.Concrete.AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Rol listesi</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Rol Adı</th>

        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>

            <td>
                <a href="/Role/DeleteRole/@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i> Sil </a>
            </td>
            <td>
                <a href="/Role/UpdateRole/@item.Id" class="btn btn-success">
                    <i class="fa fa-edit"></i> Güncelle
                </a>
            </td>

        </tr>
    }
</table>
<a href="/Role/AddRole/" class="btn" style="background-color: #ff6600; color: white;">
    <i class="fa fa-building"></i> Yeni Rol Girişi
</a>




