@model CreateNewUserDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Otel Giriş Paneli</title>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap"
          rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100vh;
            margin: 0;
            padding: 0 20px; /* yatay padding, istersen kaldır */
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            padding-top: 60px;
            padding-bottom: 60px;
            box-sizing: border-box;
        }

        .login-container {
            background: white;
            width: 100%;
            max-width: 600px;
            border-radius: 20px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
            padding: 40px 50px;
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
            align-items: center;
        }



        .logo {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
            color: white;
            font-size: 1.5rem;
            font-weight: 600;
            user-select: none;
        }

        .title {
            font-size: 1.8rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
            text-align: center;
        }

        .subtitle {
            color: #666;
            margin-bottom: 32px;
            text-align: center;
        }

        form {
            width: 100%;
        }

        .form-group {
            margin-bottom: 16px;
            position: relative;
        }

        .form-control {
            width: 100%;
            padding: 14px 20px 14px 45px;
            border: 2px solid #e1e5e9;
            border-radius: 12px;
            font-size: 1rem;
            background: #f8f9fa;
            transition: all 0.3s ease;
            outline: none;
        }

            .form-control:focus {
                border-color: #667eea;
                background: #fff;
                box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            }

        .form-icon {
            position: absolute;
            left: 14px;
            top: 50%;
            transform: translateY(-50%);
            color: #999;
            transition: color 0.3s ease;
        }

        .form-control:focus + .form-icon {
            color: #667eea;
        }

        .btn-login {
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 12px;
            color: white;
            font-size: 1rem;
            font-weight: 500;
            cursor: pointer;
            transition: transform 0.3s ease;
            margin-top: 10px;
            margin-bottom: 20px;
        }

            .btn-login:hover {
                transform: translateY(-2px);
            }

        .divider {
            text-align: center;
            margin: 18px 0;
            position: relative;
            color: #999;
            font-size: 0.9rem;
        }

            .divider::before {
                content: '';
                position: absolute;
                top: 50%;
                left: 0;
                right: 0;
                height: 1px;
                background: #e1e5e9;
                z-index: 0;
            }

            .divider span {
                background: white;
                padding: 0 15px;
                position: relative;
                z-index: 1;
            }

        .social-buttons {
            display: flex;
            gap: 12px;
            margin-bottom: 20px;
        }

        .social-btn {
            flex: 1;
            padding: 10px;
            border: none;
            border-radius: 12px;
            font-size: 0.9rem;
            font-weight: 500;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            color: white;
            transition: all 0.3s ease;
        }

            .social-btn.google {
                background: #db4437;
            }

            .social-btn.facebook {
                background: #3b5998;
            }

            .social-btn:hover {
                filter: brightness(1.1);
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            }

        .footer {
            text-align: center;
            color: #666;
            font-size: 0.9rem;
        }

            .footer a {
                color: #667eea;
                text-decoration: none;
                font-weight: 500;
            }

                .footer a:hover {
                    color: #764ba2;
                }
    </style>
</head>
<body>
    <div class="login-container" style="min-height: 600px;">
        <div class="logo">H</div>
        <h1 class="title">Rosella</h1>
        <p class="subtitle">Sign in to continue</p>

        <form method="post">
            <div class="form-group">
                <i class="fas fa-user form-icon"></i>
                <input type="text"
                       class="form-control"
                       placeholder="Adınız"
                       asp-for="Name"
                       autocomplete="off" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fas fa-user form-icon"></i>
                <input type="text"
                       class="form-control"
                       placeholder="Soyadınız"
                       asp-for="SurName"
                       autocomplete="off" />
                <span asp-validation-for="SurName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fas fa-user form-icon"></i>
                <input type="text"
                       class="form-control"
                       placeholder="Kullanıcı Adınız"
                       asp-for="UserName"
                       autocomplete="off" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <i class="fas fa-envelope form-icon"></i>
                <input type="email"
                       class="form-control"
                       placeholder="Mail Adresiniz"
                       asp-for="Mail"
                       autocomplete="off" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <i class="fas fa-lock form-icon"></i>
                <input type="password"
                       class="form-control"
                       placeholder="Şifreniz"
                       asp-for="Password"
                       autocomplete="off" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fas fa-lock form-icon"></i>
                <input type="password"
                       class="form-control"
                       placeholder="Şifre Tekrar"
                       asp-for="ConfirmPassword"
                       autocomplete="off" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-login">
                <i class="fas fa-check" style="margin-right: 8px"></i>
                Kayıt Ol
            </button>
        </form>

        <div class="divider">
            <span>Or continue with</span>
        </div>

        <div class="social-buttons">
            <button class="social-btn google">
                <i class="fab fa-google"></i>
                Google
            </button>
            <button class="social-btn facebook">
                <i class="fab fa-facebook-f"></i>
                Facebook
            </button>
        </div>

        <p class="footer">
            Bir hesaba sahip misin?
            <a href="/Login/Index/">Oturum Aç</a>
        </p>
    </div>
</body>
</html>
