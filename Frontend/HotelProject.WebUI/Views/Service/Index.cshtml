
@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}




<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Hizmet Başlığı</th>
    
        <th>Sil</th>
        <th> Güncelle</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.ServiceID</th>
            <td>@item.Title</td>
        
            <td>
                <a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger"><i class="fa fa-trash"></i> Sil </a>
            </td>
            <td>
                <a href="/Service/UpdateService/@item.ServiceID" class="btn btn-success">
                    <i class="fa fa-edit"></i> Güncelle
                </a>
            </td>
         
        </tr>
    }
</table>
<a href="/Service/AddService/" class="btn" style="background-color: #ff6600; color: white;">
    <i class="fa fa-user-plus"></i> Yeni Hizmet Girişi
</a>





